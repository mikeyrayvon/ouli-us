@import "kouto-swiss"

@import "helpers"
@import "genericons"

meyer-reset()
box-sizing-reset()
normalize() 

// GRID

$gutter = 16px

.container
  margin: 0 auto
  width: 1600px

// VARIABLES

$golden-ratio = 1.61803398875

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 15px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

$color-black-soft = rgb(14, 14, 14)
$color-white-soft = rgb(253, 253, 253)

// TYPOGRAPHY

body
  font-family: font-stack('Helvetica')
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

  // HTML ELEMENT STYLING
 
h1, h2
  font-size: 1.2rem

p
  margin-bottom: 1rem

  // FONT RULES

.font-italic
  font-style: italic

.font-bold
  font-weight: bold

.font-small-caps
  font-size: 0.85em
  text-transform: uppercase

  // TEXT RULES

.text-overflow-ellipsis
  overflow: ellipsis

.text-align-left
  text-align: left

.text-align-right
  text-align: right

.text-align-center
  text-align: center


// LINKS

a,
a:active,
a:visited
  color: inherit
  text-decoration: none
  
p a 
  text-decoration: underline
  
  
// HEADER

header#header 
  position: relative
  margin-top: $margin-small
  margin-bottom: $margin-small
  
.site-title
  position: fixed
  margin: 0
  font-size: 1.5rem
  
.email-link
  display: block
  text-align: right 
  font-size: 1.5rem
  

// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

img
  max-width: 100%
  height: auto
  
.single-text
  width: 600px
  margin-bottom: $margin-tiny
  
.images-container
  text-align: center
  
.single-image
  display: inline-block
  vertical-align: top
  margin: $margin-tiny
  
.caption
  text-align: center
  font-size: 0.7rem
  

// MEDIA QUERIES

@media screen and (max-width: 1640px)

  .container
    width: 98%
    
@media screen and (max-width: 900px)

  .single-text
    width: 500px
    
@media screen and (max-width: 601px)

  .container
    width: 96%

  .single-text
    width: 400px
    
@media screen and (max-width: 401px)

  .single-text
    width: 100%
