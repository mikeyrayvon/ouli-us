@import "kouto-swiss"

@import "helpers"

@import "fonts"

meyer-reset()
box-sizing-reset()
normalize()

// GRID

$gutter = 16px

// VARIABLES

$golden-ratio = 1.61803398875

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 24px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

$color-black-soft = rgb(14, 14, 14)
$color-white-soft = rgb(253, 253, 253)

$font-moderat = "Moderat", "Helvetica Neue", Helvetica, Arial, sans-serif

.percent-col
  float: left
  box-sizing: border-box

$pcols = 10

for pcol in 1..$pcols
  .into-{pcol}
    width: ( 100% / pcol )

// TYPOGRAPHY

body
  font-family: $font-moderat
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic
  height: 100%
  width: 100%
  padding-bottom: $margin-small 

  // HTML ELEMENT STYLING
 
h1, h2
  font-size: $font-size-basic
  font-weight: 400
  font-style: normal
  
h2
  margin: $margin-tiny 0

p
  margin-bottom: 1rem
  
em 
  font-style: normal

strong
  font-weight: 400

  // FONT RULES

.font-small-caps
  font-size: 0.85em
  text-transform: uppercase
  
.font-underline
  text-decoration: underline

  // TEXT RULES

.text-overflow-ellipsis
  overflow: ellipsis

.text-align-left
  text-align: left

.text-align-right
  text-align: right

.text-align-center
  text-align: center


// LINKS

a,
a:active,
a:visited
  color: inherit
  text-decoration: none
  
p a 
  text-decoration: underline
  
  
// HEADER

header#header 
  position: fixed
  top: 0
  

// BASIC

.container
  padding: $margin-small 
  width: 100%


html
  color: $color-black-soft

img
  max-width: 100%
  height: auto
  
#main-content
  margin-top: $margin-mid
  text-align: center
  
#home-text-container
  font-size: 28px
  line-height: $font-leading-basic
  
.home-text 
  width: 600px
  margin: 0 auto $margin-large
  
.post-title
  display: block 
  .post-num
    display: inline
  h2 
    display: none
  
a.post-link:hover
  .post-num
    display: none
  h2 
    display: inline
  
.single-text
  margin: 0 auto
  width: 600px
  text-align: center
  
.single-image
  display: inline-block
  vertical-align: top
  margin: $margin-small
  
.info-header
  margin-bottom: $margin-basic
  
.info-title 
  margin: 0
  
// FOOTER

footer#footer 
  position: fixed
  bottom: 0
  pointer-events: none
  a 
    pointer-events: auto
    
@media screen and (max-width: 801px)
  .single-image
    margin: $margin-small $margin-mid

@media screen and (max-width: 601px)
  #home-text-container, h1, h2, body
    font-size: 21px
  .single-text, .home-text
    width: 100%
    
@media screen and (max-width: 401px)
  .single-image
    margin: $margin-small $margin-basic
